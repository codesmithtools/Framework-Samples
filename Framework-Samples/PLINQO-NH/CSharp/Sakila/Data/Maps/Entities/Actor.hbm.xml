<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Sakila.Data.Entities" assembly="Sakila">
    <class name="Actor" table="actor" >
        <id name="ActorId" column="actor_id" type="Int16" >
            <generator class="native" />
        </id>
        <version name="LastUpdate" column="last_update" type="DateTime" generated="always" unsaved-value="null" />
        <property name="FirstName" column="first_name" type="String" not-null="true" length="135" /> 
        <property name="LastName" column="last_name" type="String" not-null="true" length="135" /> 
        <bag name="FilmList" table="film_actor" inverse="false" cascade="all" lazy="true" >
            <key>
                <column name="actor_id" />
            </key>
            <many-to-many class="Film" >
                <column name="film_id" />
            </many-to-many>
        </bag>
    </class>
</hibernate-mapping>

