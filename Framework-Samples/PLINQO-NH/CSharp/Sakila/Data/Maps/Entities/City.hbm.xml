<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Sakila.Data.Entities" assembly="Sakila">
    <class name="City" table="city" >
        <id name="CityId" column="city_id" type="Int16" >
            <generator class="native" />
        </id>
        <version name="LastUpdate" column="last_update" type="DateTime" generated="always" unsaved-value="null" />
        <property name="CityMember" column="city" type="String" not-null="true" length="150" /> 
        <many-to-one name="Country" class="Country" not-null="true" >
            <column name="country_id" />
        </many-to-one>
        <bag name="AddressList" inverse="true" cascade="all-delete-orphan" lazy="true" >
            <key>
                <column name="city_id" />
            </key>
            <one-to-many class="Address" />
        </bag>
    </class>
</hibernate-mapping>

