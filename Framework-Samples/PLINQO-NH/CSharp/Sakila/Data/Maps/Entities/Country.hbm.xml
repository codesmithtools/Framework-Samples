<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Sakila.Data.Entities" assembly="Sakila">
    <class name="Country" table="country" >
        <id name="CountryId" column="country_id" type="Int16" >
            <generator class="native" />
        </id>
        <version name="LastUpdate" column="last_update" type="DateTime" generated="always" unsaved-value="null" />
        <property name="CountryMember" column="country" type="String" not-null="true" length="150" /> 
        <bag name="CityList" inverse="true" cascade="all-delete-orphan" lazy="true" >
            <key>
                <column name="country_id" />
            </key>
            <one-to-many class="City" />
        </bag>
    </class>
</hibernate-mapping>

