<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Sakila.Data.Entities" assembly="Sakila">
    <class name="Customer" table="customer" >
        <id name="CustomerId" column="customer_id" type="Int16" >
            <generator class="native" />
        </id>
        <version name="LastUpdate" column="last_update" type="DateTime" generated="always" unsaved-value="null" />
        <property name="FirstName" column="first_name" type="String" not-null="true" length="135" /> 
        <property name="LastName" column="last_name" type="String" not-null="true" length="135" /> 
        <property name="Email" column="email" type="String" not-null="false" length="150" /> 
        <property name="Active" column="active" type="String" not-null="true" /> 
        <property name="CreateDate" column="create_date" type="DateTime" not-null="true" /> 
        <many-to-one name="Address" class="Address" not-null="true" >
            <column name="address_id" />
        </many-to-one>
        <many-to-one name="Store" class="Store" not-null="true" >
            <column name="store_id" />
        </many-to-one>
        <bag name="PaymentList" inverse="true" cascade="all-delete-orphan" lazy="true" >
            <key>
                <column name="customer_id" />
            </key>
            <one-to-many class="Payment" />
        </bag>
        <bag name="RentalList" inverse="true" cascade="all-delete-orphan" lazy="true" >
            <key>
                <column name="customer_id" />
            </key>
            <one-to-many class="Rental" />
        </bag>
    </class>
</hibernate-mapping>

