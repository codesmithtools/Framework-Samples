<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Sakila.Data.Entities" assembly="Sakila">
    <class name="Language" table="language" >
        <id name="LanguageId" column="language_id" type="Byte" >
            <generator class="native" />
        </id>
        <version name="LastUpdate" column="last_update" type="DateTime" generated="always" unsaved-value="null" />
        <property name="Name" column="name" type="String" not-null="true" length="60" /> 
        <bag name="FilmList1" inverse="true" cascade="all-delete-orphan" lazy="true" >
            <key>
                <column name="language_id" />
            </key>
            <one-to-many class="Film" />
        </bag>
        <bag name="FilmList2" inverse="true" cascade="all-delete-orphan" lazy="true" >
            <key>
                <column name="original_language_id" />
            </key>
            <one-to-many class="Film" />
        </bag>
    </class>
</hibernate-mapping>

