<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Tracker.Data.Entities" assembly="Tracker">
    <class name="Audit" table="[dbo].[Audit]" >
        <id name="Id" column="[Id]" type="Int32" >
            <generator class="native" />
        </id>
        <version name="RowVersion" column="[RowVersion]" type="BinaryBlob" generated="always" unsaved-value="null" />
        <property name="Date" column="[Date]" type="DateTime" /> 
        <property name="Content" column="[Content]" type="AnsiString" /> 
        <property name="Username" column="[Username]" type="String" length="50" /> 
        <property name="CreatedDate" column="[CreatedDate]" type="DateTime" /> 
        <property name="Myxml" column="[myxml]" type="Plinqo.NHibernate.XmlType, Plinqo.NHibernate" /> 
        <many-to-one name="Task" class="Task" >
            <column name="[TaskId]" />
        </many-to-one>
        <many-to-one name="User" class="User" >
            <column name="[UserId]" />
        </many-to-one>
    </class>
</hibernate-mapping>

